@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Patterns</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Patterns</h2>
            </div>
            <div class="panel-body">
                <table cellpadding="10" data-bind="foreach: patterns">
                    <tr>      
                        <td valign="top">
                            <strong><span data-bind="text: Id"></span></strong>   <br/>
                            Humidity:<span data-bind="text: Humidity"></span><br />
                            RealPower:<span data-bind="text: RealPower"></span> <br />
                            ActivePower:<span data-bind="text: ActivePower"></span> <br />
                            <a href="#" data-bind="click:$parent.getPatternDetails" class="btn btn-primary btn-xs">Details</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- TODO: View Product Details >> Update/Delete -->
    <div class="col-md-offset-6" id="viewDetails" data-bind="if: details()">
        <!-- if details containing the return product, i.e. not null
        Then the div will be shown with the data-binding as shown -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Details</h2>
            </div>
            <form class="form-horizontal">
                <table class="table">
                    <tr><td>Pattern Id</td><td><input type="text" id="Id" class="form-control" readonly data-bind="value:  details().Id" /></td></tr>
                    <tr><td>Date</td><td><textarea rows="3" cols="255" id="Date" class="form-control" data-bind="value:  details().Date"></textarea></td></tr>
                    <tr><td>Temperature</td><td><textarea rows="3" cols="255" id="Temperature" class="form-control" data-bind="value:  details().Temperature"></textarea></td></tr>
                    <tr><td>Humidity</td><td><input type="number" id="Humidity" class="form-control" data-bind="value:  details().Humidity"></td></tr>
                    <tr><td>RealPower</td><td><input type="text" id="RealPower" class="form-control" data-bind="value:  details().RealPower"></td></tr>
                    <tr><td>ActivePower</td><td><input type="text" id="ActivePower" class="form-control" data-bind="value:  details().ActivePower"></td></tr>
                    <tr>
                        <td>Format</td>
                        <td>
                            <input type="radio" class="radio-inline" value="Paperback" data-bind="checked: details().Format" />Paperback
                            <input type="radio" class="radio-inline" value="Hardcover" data-bind="checked: details().Format" />Hardcover
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2" align="center">
                            <a href="#" data-bind="click" class="btn btn-primary">Update</a>
                            <a href="#" data-bind="click:removePattern" class="btn btn-primary">Remove</a>
                        </td>
                    </tr>

                </table>
            </form>
        </div>
    </div>



<!-- TODO: Add New Product -->
<div class="col-md-offset-6" id="addNewPattern">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Add New Pattern</h2>
        </div>

        <div class="panel-body">
            <form class="form-horizontal" data-bind="submit: addPattern">
                <table class="table">
                    <tr>
                        <td>ID</td>
                        <td><textarea rows="3" cols="255" class="form-control" id="inputID" data-bind="value:newPattern.Id"></textarea></td>
                    </tr>
                    <tr>
                        <td>Date</td>
                        <td><textarea rows="3" cols="255" class="form-control" id="inputDate" data-bind="value:newPattern.Date"></textarea></td>
                    </tr>
                    <tr>
                        <td>Temperature</td>
                        <td><input type="number" class="form-control" id="inputTemperature" data-bind="value:newPattern.Temperature" /></td>
                    </tr>
                    <tr>
                        <td>Humidity</td>
                        <td><input type="text" class="form-control" id="inputHumidity" data-bind="value:newPattern.Humidity" autocomplete="on" /></td>
                    </tr>

                    <tr>
                        <td>RealPower</td>
                        <td><input type="text" class="form-control" id="inputRealPower" data-bind="value:newPattern.RealPower" /></td>
                    </tr>
                    <tr>
                        <td>ActivePower</td>
                        <td><input type="number" step="any" class="form-control" id="inputActivePower" data-bind="value:newPattern.ActivePower" /></td>
                    </tr>
                    <tr>
                        <td align="center" colspan="2">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </td>
                    </tr>
                </table>

            </form>
        </div>
    </div>
</div>




</div>
